APP_NAME='Darwin'
APP_ENV=production
APP_KEY=                                    # Execute: php artisan key:generate
APP_DEBUG=false
APP_URL=http://seu-dominio.com              # ⚠️ ALTERE PARA SEU DOMÍNIO

MIX_ASSET_URL=${APP_URL}
MIX_APP_URL=${APP_URL}
MIX_PUBLIC_PATH=/

IS_FAKE_DATA=false
IS_DUMMY_DATA=false
IS_DUMMY_DATA_IMAGE=false
IS_DEMO=false

TELESCOPE_PATH_LIVE=telescope
MEDIA_DISK=public
USER_REGISTRATION=true

# Configuração do Banco de Dados
DB_CONNECTION=mysql
DB_HOST=mysql                               # Nome do serviço no docker-compose
DB_PORT=3306
DB_DATABASE=darwin_prod                     # Nome do banco de dados
DB_USERNAME=darwin_user                     # Usuário do banco
DB_PASSWORD=SENHA_SUPER_SEGURA_AQUI         # ⚠️ ALTERE PARA UMA SENHA FORTE!

# Portas da aplicação (expostas para o host)
APP_PORT=80
APP_PORT_SSL=443

# Cache e Sessão
BROADCAST_DRIVER=log
CACHE_DRIVER=redis                          # Usando Redis para melhor performance
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync                       # Para produção, considere usar 'redis' ou 'database'
SESSION_DRIVER=redis                        # Usando Redis para melhor performance
SESSION_LIFETIME=120

# Redis
REDIS_HOST=redis                            # Nome do serviço no docker-compose
REDIS_PASSWORD=null
REDIS_PORT=6379

# E-mail (Configure com seu provedor SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io                  # ⚠️ ALTERE para seu servidor SMTP
MAIL_PORT=2525
MAIL_USERNAME=null                          # ⚠️ ALTERE
MAIL_PASSWORD=null                          # ⚠️ ALTERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@seu-dominio.com" # ⚠️ ALTERE
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Opcional - se você usa S3 para uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (Opcional - para notificações em tempo real)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Meilisearch (Opcional - para busca)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700

# Notificações
BACKUP_NOTIFICATION_EMAIL=admin@seu-dominio.com  # ⚠️ ALTERE
SLACK_NOTIFICATION_WEBHOOK=

# Social Login - Facebook (Opcional)
FACEBOOK_ACTIVE=false
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT=http://seu-dominio.com/login/facebook/callback

# Social Login - GitHub (Opcional)
GITHUB_ACTIVE=false
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT=http://seu-dominio.com/login/github/callback

# Social Login - Google (Opcional)
GOOGLE_ACTIVE=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://seu-dominio.com/login/google/callback
