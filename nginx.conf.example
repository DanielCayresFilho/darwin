server {
    listen 80;
    listen [::]:80;
    server_name darwin.taticamarketing.com.br;
    
    # Redirecionar HTTP para HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name darwin.taticamarketing.com.br;

    root /var/www/html/public;
    index index.php index.html index.htm;

    # SSL Configuration (ajuste os caminhos dos certificados)
    ssl_certificate /etc/letsencrypt/live/darwin.taticamarketing.com.br/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/darwin.taticamarketing.com.br/privkey.pem;
    
    # SSL Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Logs
    access_log /var/log/nginx/darwin-access.log;
    error_log /var/log/nginx/darwin-error.log;

    # Tamanho máximo de upload
    client_max_body_size 100M;

    # Laravel - Servir arquivos estáticos diretamente
    location ~* \.(jpg|jpeg|gif|css|png|js|ico|html|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Laravel - Redirecionar tudo para index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP-FPM Configuration
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        # Para uso com Docker: usar nome do serviço
        fastcgi_pass app:9000;
        # Para uso local standalone: usar 127.0.0.1:9000
        # fastcgi_pass 127.0.0.1:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Timeouts
        fastcgi_read_timeout 300;
        fastcgi_send_timeout 300;
        fastcgi_connect_timeout 300;
        
        # Buffer settings
        fastcgi_buffer_size 128k;
        fastcgi_buffers 256 16k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }

    # Bloquear acesso a arquivos ocultos
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Bloquear acesso a arquivos sensíveis
    location ~ /\.(env|git|svn) {
        deny all;
        access_log off;
        log_not_found off;
    }
}

